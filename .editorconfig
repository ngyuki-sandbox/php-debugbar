root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.{html,tpl,ejs}]
indent_size = 2

[*.yml]
indent_size = 2

[*.sql]
indent_size = 2

[*.json]
indent_size = 2

[composer.json]
indent_size = 4

[*.{bat,btf}]
end_of_line = crlf
